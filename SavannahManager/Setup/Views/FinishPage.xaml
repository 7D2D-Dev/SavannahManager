<UserControl x:Class="_7dtd_svmanager_fix_mvvm.Setup.Views.FinishPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_7dtd_svmanager_fix_mvvm.Setup.Views"
             xmlns:app="clr-namespace:_7dtd_svmanager_fix_mvvm.LangResources"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             UseLayoutRounding="True">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CommonStyleLib;component/Styles/Main.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <StackPanel>
            <Label FontWeight="Bold" FontSize="14" Content="{Binding Source={x:Static app:ResourceService.Current}, Path=SetupResources.UI_Page4Title, Mode=OneWay}" />
            <TextBlock TextWrapping="WrapWithOverflow" Style="{DynamicResource ExTextBlock}" Text="{Binding Source={x:Static app:ResourceService.Current}, Path=SetupResources.UI_Page4Description, Mode=OneWay}" />
        </StackPanel>

    </Grid>
</UserControl>
