<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <UseWPF>true</UseWPF>
    <LangVersion>latest</LangVersion>
    <Authors>Aona Suzutsuki</Authors>
    <Company>Kimama Lab.</Company>
    <Copyright>Copyright (C) Aona Suzutsuki 2014 - 2020</Copyright>
    <AssemblyVersion>2.1.4.0</AssemblyVersion>
    <FileVersion>2.1.4.0</FileVersion>
    <Version>2.1.4.0</Version>
    <AssemblyName>update</AssemblyName>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="SET TargetUpdateDir=$(SolutionDir)SavannahManager\bin\$(ConfigurationName)\net48\Updater&#xD;&#xA;if exist &quot;%25TargetUpdateDir%25&quot; (&#xD;&#xA;    echo &quot;&quot;&#xD;&#xA;) else (&#xD;&#xA;    mkdir &quot;%25TargetUpdateDir%25&quot;&#xD;&#xA;)&#xD;&#xA;copy /y &quot;$(TargetPath)&quot; &quot;%25TargetUpdateDir%25\$(TargetFileName)&quot;&#xD;&#xA;copy /y &quot;$(TargetPath).config&quot; &quot;%25TargetUpdateDir%25\$(TargetFileName).config&quot;&#xD;&#xA;xcopy &quot;$(TargetDir)*.dll&quot; &quot;%25TargetUpdateDir%25\&quot; /E /Y" />
  </Target>

  <ItemGroup>
    <PackageReference Include="CommonCoreLib" Version="1.0.1" />
    <PackageReference Include="CommonStyleLib" Version="1.0.0" />
    <PackageReference Include="System.IO.Compression" Version="4.3.0" />
    <PackageReference Include="UpdateLib" Version="1.0.0" />
  </ItemGroup>

</Project>
